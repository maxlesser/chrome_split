{
  "manifest_version": 2,

  "name": "Monopolize",
  "description": "Moustaches. Moustaches everywhere.",
  "version": "1.0",
  "permissions": [
    "tabs", "http://*/*"
  ],

  "browser_action": {
    "default_icon": "moustachify.png"
   },

  // "background": {
  //   "persistent": true,
  //   "scripts": ["content.js"]
  // },

  // "background": {
  //   "scripts": ["reload.js"],
  //   "persistent": true
  // },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery-2.0.3.min.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["jquery-2.0.3.min.js", "jquery-2.0.3.min.map"]
}