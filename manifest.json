{
  "manifest_version": 2,

  "name": "Stache-ism",
  "description": "A way of life. A way of being.",
  "version": "1.0",
  "permissions": [
    "tabs", "http://*/*", "storage"
  ],

  "browser_action": {
    "default_icon": "moustachify.png",
    "default_title": "Stache-ism",
    "default_popup": "popup.html"
   },

   "background": {
     "persistent": true,
     "scripts": ["background.js"]
   },

  // "background": {
  //   "scripts": ["reload.js"],
  //   "persistent": true
  // },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery-2.0.3.min.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": ["jquery-2.0.3.min.js", "jquery-2.0.3.min.map"]
}